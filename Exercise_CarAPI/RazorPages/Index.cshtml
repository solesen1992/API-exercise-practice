@page
@model Exercise_CarAPI.RazorPages.IndexModel
@{
}

<h2>Cars List</h2>

<table>
    <thead>
        <tr>
            <th>License Plate</th>
            <th>Make</th>
            <th>Model</th>
            <th>Color</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.LicensePlate</td>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Color</td>
            </tr>
        }
    </tbody>
</table>